{
  "name": "nest-app",
  "description": "Generate a NestJS app in apps/<name> wired to shared config, database, auth, and communications packages when present.",
  "entry": "node automations/generators/nest-app.js",
  "options": [
    {
      "flag": "--name",
      "type": "string",
      "required": true,
      "description": "App directory name (apps/<name>)."
    },
    {
      "flag": "--port",
      "type": "number",
      "default": 3001,
      "description": "Port used in the generated bootstrap file."
    },
    {
      "flag": "--force",
      "type": "boolean",
      "default": false,
      "description": "Overwrite an existing directory."
    },
    {
      "flag": "--skip-install",
      "type": "boolean",
      "default": false,
      "description": "Skip running `pnpm install` after generating the app."
    },
    {
      "flag": "--ci-workflow",
      "type": "boolean",
      "default": true,
      "description": "Generate `.github/workflows/app-<name>-ci.yml` for this app."
    },
    {
      "flag": "--skip-ci-workflow",
      "type": "boolean",
      "default": false,
      "description": "Skip generating a GitHub workflow for this app."
    }
  ],
  "outputs": ["apps/<name>/**", ".github/workflows/app-<name>-ci.yml"]
}
