{
  "name": "next-app",
  "description": "Generate a Next.js app in apps/<name> with shared configs, workspace paths, and a health route.",
  "entry": "node automations/generators/next-app.js",
  "options": [
    {
      "flag": "--name",
      "type": "string",
      "required": true,
      "description": "App directory name (apps/<name>)."
    },
    {
      "flag": "--port",
      "type": "number",
      "default": 3000,
      "description": "Port hint recorded in the generated README."
    },
    {
      "flag": "--sample",
      "type": "boolean",
      "default": true,
      "description": "Include sample page content."
    },
    {
      "flag": "--force",
      "type": "boolean",
      "default": false,
      "description": "Overwrite an existing directory."
    },
    {
      "flag": "--skip-install",
      "type": "boolean",
      "default": false,
      "description": "Skip running `pnpm install` after generating the app."
    },
    {
      "flag": "--ci-workflow",
      "type": "boolean",
      "default": true,
      "description": "Generate `.github/workflows/app-<name>-ci.yml` for this app."
    },
    {
      "flag": "--skip-ci-workflow",
      "type": "boolean",
      "default": false,
      "description": "Skip generating a GitHub workflow for this app."
    }
  ],
  "outputs": ["apps/<name>/**", ".github/workflows/app-<name>-ci.yml"]
}
