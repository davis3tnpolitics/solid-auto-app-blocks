{
  "extends": "../config/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "components/*": ["components/*"],
      "lib/*": ["lib/*"],
      "@workspace/ui": ["index.ts"],
      "@workspace/ui/*": ["*"]
    }
  },
  "include": ["components", "lib", "test", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
