generator client {
  provider = "prisma-client"
  output   = "../client/prisma"
}

generator docs {
  provider = "prisma-markdown"
  output   = "../docs/erd.md"
}

generator contracts {
  provider = "prisma-class-validator-generator"
  output   = "../contracts"
}

generator stubs {
  provider = "prisma-generator-fake-data"
  output   = "../stubs/data.ts"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
