model User {
  id            String    @id @default(uuid()) @db.Uuid
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts      Account[]
  sessions      Session[]
  authenticators Authenticator[]
}

model Account {
  id                String  @id @default(uuid()) @db.Uuid
  userId            String  @db.Uuid
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  type              String
  provider          String
  providerAccountId String

  // Keep these optional fields; they’re the “standard” ones Auth.js stores for OAuth flows
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique
  userId       String   @db.Uuid
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime

  @@index([userId])
}

// WebAuthn / Passkeys (required when using the Passkey provider)
model Authenticator {
  userId              String  @db.Uuid
  user                User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  credentialID        String  @db.Text
  providerAccountId   String
  credentialPublicKey String  @db.Text
  counter             Int
  credentialDeviceType String
  credentialBackedUp  Boolean
  transports          String? @db.Text

  @@id([userId, credentialID])
  @@index([userId])
}
